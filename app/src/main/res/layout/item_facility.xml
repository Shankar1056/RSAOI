<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="false">
    <bigappcompany.com.rsi.activity.RippleView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:rv_rippleDuration="150"
        app:rv_centered="true"
        app:rv_color="@color/white"
        android:id="@+id/rp_fac_item"

        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/img_ph"
        android:src="@drawable/gradient"
        android:scaleType="centerCrop" />
    <bigappcompany.com.rsi.widgets.MyCustomBoldTextView
        android:text="Title"
        android:id="@+id/title_tv"
        android:textSize="@dimen/text_large"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <bigappcompany.com.rsi.widgets.MyCustomTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/about"

        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/text_small"
        android:id="@+id/des_tv"
        android:textColor="@color/secondary_text"/>
    </bigappcompany.com.rsi.activity.RippleView>
</android.support.v7.widget.CardView>