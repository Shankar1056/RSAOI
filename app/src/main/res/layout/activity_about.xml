<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bigappcompany.com.rsi.activity.About">
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"

                    >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient"
                android:alpha="0.4"
                android:id="@+id/img_main"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"/>
                </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient"/>
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|center_horizontal"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:id="@+id/img"
                        android:src="@drawable/rsinhji"
                        android:background="@drawable/gradient"
                        />
                </android.support.v7.widget.CardView>
            </FrameLayout>
            <bigappcompany.com.rsi.widgets.MyCustomBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tv_org"
                android:text="RSI Bangalore"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_margin"
                />

            <bigappcompany.com.rsi.widgets.MyCustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Established in 1961"
                android:id="@+id/tv_est"
                android:textColor="@color/secondary_text"/>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/wv_about"
                android:textColor="@color/secondary_text"/>

        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:id="@+id/bottombar"
        android:layout_alignParentBottom="true"></FrameLayout>
</LinearLayout>
