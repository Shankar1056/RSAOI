<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardBackgroundColor="@color/white"
	app:cardElevation="2dp"
	app:cardCornerRadius="1dp"
	android:id="@+id/card"
	android:layout_marginTop="5dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="11dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:paddingTop="10dp"
			android:layout_toLeftOf="@+id/img_download">
		<bigappcompany.com.rsi.widgets.MyCustomTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_large_17"
			android:id="@+id/bill_year_month"
			android:layout_alignParentLeft="true"
			android:textColor="@color/primary_text"
			android:textAllCaps="true"/>
		<bigappcompany.com.rsi.widgets.MyCustomTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_medium"
			android:id="@+id/membership_id"
			android:textColor="@color/secondary_text"
			/>
			<bigappcompany.com.rsi.widgets.MyCustomTextView
				android:id="@+id/payment_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="25dp"
				android:paddingRight="25dp"
				android:paddingTop="3dp"
				android:paddingBottom="3dp"
				android:textColor="@color/white"
				android:layout_marginTop="7dp"
				android:background="@drawable/roundcorner_button"/>
		</LinearLayout>
		<ImageView

			android:id="@+id/img_download"
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:padding="2dp"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
			android:src="@drawable/right_arrow"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>
	</RelativeLayout>
</android.support.v7.widget.CardView>